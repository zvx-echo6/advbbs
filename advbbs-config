#!/usr/bin/env python3
"""
advBBS Configuration Tool Launcher

Simple launcher for the Rich-based configuration interface.
"""

import sys
import os

# Add package to path if running from source
script_dir = os.path.dirname(os.path.abspath(__file__))
if os.path.exists(os.path.join(script_dir, "advbbs")):
    sys.path.insert(0, script_dir)

from advbbs.cli.config_rich import main

if __name__ == "__main__":
    main()
